@model Trip
@{
    Layout = null;
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatorId" />
    <input type="hidden" asp-for="ImagePath" />

    <div class="form-group">
        <input asp-for="Name" class="form-control form-control-sm input-sm" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="DateFrom" class="form-control form-control-sm" />
        <span asp-validation-for="DateFrom" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="DateTo" class="form-control form-control-sm" />
        <span asp-validation-for="DateTo" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="file" name="imageFile" accept=".png, .jpg, .jpeg, .gif" class="form-control form-control-sm" />
    </div>

    <div class="form-group btn-group align-items-end mt-2">
        <button class="btn btn-info btn-sm" 
                hx-post="@Url.Action("Edit", "Trips", new { id = Model.Id })"
                hx-target="body"
                hx-encoding="multipart/form-data">
            Save
        </button>
        <button class="btn btn-secondary btn-sm"
                hx-get="@Url.Action("Details", "Trips", new { id = Model.Id })"
                hx-target="#tripEdit"
                hx-select="#tripEdit"
        hx-swap="outerHTML">
            Cancel
        </button>



        @*<a href="@Url.Action("Details", "Trips", new { id = Model.Id })" class="btn btn-secondary btn-sm">Cancel</a>*@
    </div>
</form>

